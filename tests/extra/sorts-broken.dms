program sort;

var unsortedArray[10]: int;
var sorted[10]: int;
%% sorted = {1,2,3,3,3,3,3,4,9,10}
var a: string;
var len: int;
%% len = 9;

int function modulo(a:int, n:int) {
    var div: int;
    div = a / n;
    return (a - n * div);
}

void function fillWithRandom() {
    var mult, mod, x, i:int;
    var seed: float;
    seed = 415953016;
    mult = 1365;
    mod = 736836939;
    x = modulo(seed * mult + 1, mod);
    unsortedArray[0] = x;
    for i = 1 until 9 do {
        x = modulo(x * mult + 1, mod);
        unsortedArray[i] = x;
    }
}

void function copyToSorted() {
    var i: int;
    var seis: int;
    seis = 6;
    for i = 1-1 until seis+2 do {
        sorted[i] = unsortedArray[i];
    }
}

void function bubbleSort()
{
    var i, j, len, temp: int;
    copyToSorted();
    for i = 0 until len do {   
        for j = 0 until len - i - 1 do {
            if (sorted[j] < sorted[j + 1])then{
                temp = sorted[j];
                sorted[j] = sorted[j + 1];
                sorted[j + 1] = temp;
            }
        }
    }
}

void function insertionSort(){
    var i, j, len, key: int;
    copyToSorted();
    for i = 1 until len do{
        key = sorted[i];
        j = i - 1;
        
        while( j >= 0) do{
            if(key < sorted[j]) then{
                sorted[j + 1] = sorted[j];
                j = j - 1;
            } else {
                break;
            }
        }

        sorted[j + 1] = key;
    }
}

void function selectionSort(){
    var i, j, len, min_idx, temp: int;
    copyToSorted();
    for i = 0 until len do {
        min_idx = i;
        for j = i + 1 until len do {
            if(sorted[j] > sorted[min_idx]) then {
                min_idx = j;
            }
        }
        temp = sorted[min_idx];
        sorted[min_idx] = sorted[i];
        sorted[i] = temp;
    }
}

main(){
    var i, j, len: int;
    fillWithRandom();
    print("Bubble sort:\n");
    bubbleSort();
    for i = 0 until 9 do {
        print(sorted[i],"\n");
    }
    print("\nInsertion sort:\n");
    insertionSort();
    for i = 0 until len do {
        print(sorted[i],"\n");
    }
    print("\nSelection sort:\n aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa");
    selectionSort();
    for i = 0 until 9 do {
        print(sorted[i],"\n");
    }
}